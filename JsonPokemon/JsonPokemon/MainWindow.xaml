<Window x:Class="JsonPokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JsonPokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://imgix.bustle.com/uploads/image/2021/5/8/b8be163e-55bf-43e2-87b6-f6c1100b0a06-inputpokemonkingfinal.jpg?w=1200&amp;h=630&amp;fit=crop&amp;crop=faces&amp;fm=jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <ComboBox x:Name="cboPoke" HorizontalAlignment="Left" Margin="86,117,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboPoke_SelectionChanged"/>
        <TextBox x:Name="txtHeight" HorizontalAlignment="Left" Margin="86,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtWeight" HorizontalAlignment="Left" Margin="86,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgSprite" Margin="420,70,70,64"/>
        <Button x:Name="btnFlip" Content="flip view" HorizontalAlignment="Left" Margin="86,255,0,0" VerticalAlignment="Top" IsDefault="True" Click="btnFlip_Click"/>

    </Grid>
</Window>
