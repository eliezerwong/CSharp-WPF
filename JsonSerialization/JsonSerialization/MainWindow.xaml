        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JsonSerialization"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboName" HorizontalAlignment="Left" Margin="31,104,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboName_SelectionChanged"/>
        <ListBox x:Name="lstGames" Margin="0,170,0,0" SelectionChanged="lstGames_SelectionChanged"/>
        <Label Content="Video Games" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Button x:Name="btnExport" Content="Export to Json" HorizontalAlignment="Left" Margin="700,106,0,0" VerticalAlignment="Top" Click="btnExport_Click"/>
        <Label x:Name="lblCount" Content="" HorizontalAlignment="Left" Margin="31,139,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
